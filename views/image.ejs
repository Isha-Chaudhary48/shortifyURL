<h1 style="text-align: center; margin-top: 20px; margin-bottom: 20px">
  Preview
</h1>

<img
  src="/uploads/<%= name %>"
  alt="Preview"
  style="
    height: auto;
    width: 500px;
    display: block;
    margin: 20px auto;
    padding: 10px;
    box-sizing: content-box;
    border: 1px solid #ccc;
  "
/>

<form action="/compress/uploads/<%= name %>/<%= ext %>" method="post">
  <input
    type="submit"
    value="Compress"
    style="
      margin-top: 30px;
      display: block;
      margin: 20px auto;
      padding: 10px;
      box-sizing: content-box;
      border-radius: 7px;
    "
  />
</form>
